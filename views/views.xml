    <menuitem name="Bike Rent" id="main_bikerent_menu"/> <!-- Selection in top left  -->
    <!-- menu categories -->
    <menuitem name="Menu" id="bikerental_menu" parent="main_bikerent_menu"/>
    
    <!-- actions -->
    <menuitem name="Bike rent list" id="bikerent_list" parent="bikerental_menu"
        action="bikerent_list_action"/>

